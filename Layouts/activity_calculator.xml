<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputDisplay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="#000000"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="@drawable/input_background"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:gravity="end|center_vertical"
        android:hint="0"
        android:inputType="text"
        android:textSize="24sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputDisplay"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="4"
        android:rowCount="6">

        <!-- Percentage, CE, Clear, Delete -->
        <Button
            android:id="@+id/btnPercent"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnPercent" />

        <Button
            android:id="@+id/btnCE"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnCE" />

        <Button
            android:id="@+id/btnClear"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnClear" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnDelete" />

        <!-- 1/x, xÂ², sqr, Division -->
        <Button
            android:id="@+id/btnReciprocal"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnReciprocal" />

        <Button
            android:id="@+id/btnSquare"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnSquare" />

        <Button
            android:id="@+id/btnSquareRoot"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnSquareRoot" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnDivide" />

        <!-- Number buttons 7, 8, 9, Multiply -->
        <Button
            android:id="@+id/btn7"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:insetLeft="1dp"
            android:text="@string/btn7" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn8" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn9" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnMultiply" />

        <!-- Number buttons 4, 5, 6, Minus -->
        <Button
            android:id="@+id/btn4"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn4" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn5" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn6" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnMinus" />

        <!-- Number buttons 1, 2, 3, Plus -->
        <Button
            android:id="@+id/btn1"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn1" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn2" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn3" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btnAdd" />

        <!-- Plus/Minus, Zero, Decimal, Equals -->
        <Button
            android:id="@+id/btnChangeSign"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btnChangeSign"
            android:layout_columnWeight="1"
            style="@style/CalculatorButton"/>

        <Button
            android:id="@+id/btn0"
            style="@style/CalculatorButton"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/btn0" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btnDecimal"
            android:layout_columnWeight="1"
            style="@style/CalculatorButton"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_margin="2dp"
            style="@style/CalculatorButtonEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/btnEquals" />
    </GridLayout>
</RelativeLayout>
